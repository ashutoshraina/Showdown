@inherits  NancyRazorViewBase<System.Collections.Generic.IEnumerable<Showdown.Nancy.Modules.Message>>

@{
    ViewBag.Title = "title";
    Layout = "/Common/_Layout";
}

@RenderBody()

<body>
    <section id ="Messages">
        <div class="container">
            <div class ="page-header">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Message</th>
                            <th>Reply</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td>@m.Name</td>
                                <td><p>@m.MessageContent</p></td>
                                <td>
                                    <a href="#replyModal" role="alert" class="btn btn-info" data-toggle="modal">@m.Email</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div id="replyModal" class="modal hide fade" tabindex="-1" role="dialog" 
             aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <div class ="page-header">
                    <h3>Send Reply Via Email</h3>
                </div>
            </div>
            <div class="modal-body">
                <div>
                    <textarea aria-multiline="true" class="input-xlarge" id ="responseMessage"></textarea>
                </div>
            </div>
            
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                <button class="btn btn-primary" onclick="sendReplyOfMessage(responseMessage.value)">Save changes</button>
            </div>
        </div>

        <script>

            function sendReplyOfMessage(data)
            {
                    var url = "/messages/response";
                    var postData = { "content": data };
                    $.post(
                             url,
                             postData,
                            function(response) {
                                alert(response);
                            }
                        );
            }
            
        </script>

    </section>
   
</body>